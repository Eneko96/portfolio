---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="headline-header">
  {
    title && (
      <p id="about" class="headline-about">
        {title}
      </p>
    )
  }
</header>
<style>
  .headline-header {
    display: flex;
    padding-left: 24px;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--neutral200);
    background-color: var(--neutral0);
    top: 0;
    z-index: 2;
  }

  .headline-about {
    margin: 24px;
    font-size: 20px;
    line-height: 32px;
    font-weight: 400;
  }

  .headline-avatar {
    margin-right: 32px;
  }

  @media (max-width: 768px) {
    .headline-header {
      display: none;
    }
  }
</style>
