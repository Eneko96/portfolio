---
import { CardModulated } from './Card/CardModulated';
import Space from './Space.astro';

interface Props {
  data: any[];
}

const { data } = Astro.props;
---

<div class="study-container" id="studies">
  <h2 class="study-title">Certifications & References</h2>
  <div class="cert-ref-container">
    {
      data &&
        data.length &&
        data.map((cert, index) => (
          <div>
            <CardModulated
              client:only
              date={new Date(cert.date)}
              description={cert.description}
              subtitle={cert.subtitle}
              title={cert.name}
            />
            {index < data.length - 1 && (
              <Space key={index + 'separator-cert-ref'} height="16px" />
            )}
          </div>
        ))
    }
  </div>
  {/* <SeeMore className="study-see-more" />  By the moment not show */}
</div>
<style>
  .case-study-date {
    text-transform: uppercase;
    display: block;
    margin: 0 24px 24px 16px;
    text-align: right;
    color: var(--neutral700);
    padding-top: 16px;
  }

  .case-study-position {
    margin-top: 8px;
  }

  .case-study-description {
    color: var(--neutral700);
    /* animation: scaleit 0.5s; */
    margin-top: 8px;
  }

  .study-title {
    margin-bottom: 40px !important;
  }

  .study-see-more {
    margin-top: 72px;
  }

  .case-study-title {
    font-weight: 400;
    font-size: 24px;
    line-height: 32px;
  }

  @media (max-width: 768px) {
    .cert-ref-container {
      margin: auto;
    }
  }
  .study-container {
    display: flex;
    flex-direction: column;
    margin-top: 72px;
  }

  .study-inner-container {
    padding-top: 44px;
    padding-bottom: 100px;
  }

  .study-inner-container-layer {
    display: flex;
  }

  .study-inner-container-content {
    margin-top: 40px;
  }

  .study-img-container {
    margin: 72px 0;
    position: relative;
  }

  .study-img-container::after {
    content: attr(data-title);
    position: absolute;
    bottom: 24px;
    left: 32px;
    font-size: 24px;
    line-height: 30px;
    font-weight: 400;
    font-family: Roboto, sans-serif;
    color: var(--neutral0);
  }

  .study-img-title {
    width: 100%;
    height: 208px;
  }

  .study-right-side {
    flex: 0.1 0 528px;
    padding: 48px 92px;
    /* box-shadow: 4px 8px 16px rgba(28, 48, 75, 0.08); */
    margin-left: 32px;
  }

  .study-right-side-container {
    position: sticky;
    top: 128px;
  }

  .study-right-side-element {
    margin-bottom: 24px;
  }

  .study-right-side-element > small {
    text-transform: uppercase;
  }

  .study-right-side-element > p {
    margin-top: 8px;
  }
</style>
